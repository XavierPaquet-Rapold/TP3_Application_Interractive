<Window x:Class="TP3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TP3.Views"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="1080" MinWidth="1920" KeyDown="Window_KeyDown">

    <Canvas x:Name="Mer" Background="#006A94">
        <views:Port x:Name="Port" Canvas.Left="1374" Canvas.Top="-115"/>
        <views:BateauPirate x:Name="BateauPirate" Canvas.Left="1418" Canvas.Top="596" RenderTransformOrigin="0.5,0.5">
            <views:BateauPirate.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="{Binding Path=AngleBateau}"/>
                </TransformGroup>
            </views:BateauPirate.RenderTransform>
        </views:BateauPirate>
        <views:InterfaceTir x:Name="BoutonsTirer" Canvas.Left="710" Canvas.Top="889"/>
        <views:InterfaceAbordage Canvas.Left="215" Canvas.Top="889"/>
        <views:AffichageArgent/>
    </Canvas>
</Window>
