<UserControl x:Class="TP3.Views.InterfaceTir"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TP3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="500">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            
            <Setter Property="Height" Value="75"/>
            <Setter Property="Width" Value="250"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="TirGauche" Grid.Column="0" Click="TirGauche_Click">Tir Gauche</Button>
        <Button x:Name="TirDroite" Grid.Column="1" Click="Tirdroite_Click">Tir Droit</Button>
    </Grid>
</UserControl>
