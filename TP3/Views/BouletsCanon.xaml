<UserControl x:Class="TP3.Views.BouletsCanon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TP3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="65">

    <Image Height="65" Width="65" Source="Images/boulets.png" RenderTransformOrigin="0.5,0.5">
        <Image.RenderTransform>
            <RotateTransform x:Name="RotationImage"/>
        </Image.RenderTransform>
    </Image>
</UserControl>
